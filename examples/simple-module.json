{
  "name": "simpleExample",
  "label": "Simple Example Module",
  "description": "A basic example module to understand the structure",
  "type": "action",
  "connection": "example-api",
  "parameters": [
    {
      "name": "name",
      "type": "text",
      "label": "Name",
      "required": true,
      "help": "Enter a name to process"
    },
    {
      "name": "sendEmail",
      "type": "boolean",
      "label": "Send Email Notification",
      "required": false,
      "default": false
    }
  ],
  "execute": [
    {
      "condition": "{{parameters.sendEmail}}",
      "url": "/api/notify",
      "method": "POST",
      "body": {
        "name": "{{parameters.name}}",
        "message": "Hello {{parameters.name}}!"
      }
    }
  ],
  "response": {
    "output": {
      "id": "{{body.id}}",
      "status": "{{body.status}}",
      "message": "Successfully processed {{parameters.name}}"
    }
  }
}
